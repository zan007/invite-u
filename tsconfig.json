{
  "compilerOptions": {
    "baseUrl": "./src/",
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "strictNullChecks": true,
    "lib": ["dom", "es5", "scripthost", "es2015"],
    "target": "es5",
    "typeRoots": ["./node_modules/@types", "./@types"],
    "importHelpers": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
